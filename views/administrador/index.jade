//- index admistrador
extends ../layout.jade
block nav-desktop
	li
		a(class="thin it" href="#") Gestion de usuarios
			i(class="material-icons right") group_add
	li
		a(class="thin it" href="#") Reportes
			i(class="material-icons right") trending_up
block nav-phone
	li
		a(class="" href="#") Gestion de usuarios
			i(class="material-icons left") group_add
	li
		a(class="" href="#") Reportes
			i(class="material-icons left") trending_up
	
block content
	div(class="container")
		div(class="row")
			div(class="col l10 offset-l1 m12 s12 ")
				h4(class="center bold") Usuarios del sistema
			div(class="col l8 offset-l2 m12 s12")
				form
					div(class="input-field z-depth-3")
						input(id="search" type="search" required="true" placeholder="Buscar usuario por nombre")
						label(class="label-icon" for="search")
							i(class="material-icons left") search
						i(class="material-icons mini-icon") close
			div(class="col l12 m12 s12")
				table(class="highlight z-depth-3 centered")
					thead
						tr
							th Nombre
							th Estado
							th ID empleado
					tbody
						tr(class="row")
							td FBlanco
							td
								div(class="input-field")
									select()
										option(value="activo") Activo
										option(value="inactivo") Inactivo
										option(value="baja") Baja
							td
								a(href="/") id


